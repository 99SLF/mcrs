<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.mcrs.device.mapper.DeviceMapper">

    <!--查询记录数-->
    <select id="count" resultType="int">
        SELECT count(*) FROM eqi_device AS dev
        LEFT JOIN eqi_equipment AS eqi
        ON dev.equipment_int=eqi.equipment_int
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and eqi.equipment_id like '%${equipmentId}%'
            </if>
            <if test="APPId !=null and APPId !=''">
                and dev.app_id like '%${APPId}%'
            </if>
        </where>
    </select>

    <!--查询所有-->
    <select id="queryAll" parameterType="map" resultType="com.zimax.mcrs.device.pojo.DeviceVo">
        SELECT * FROM eqi_device AS dev
        LEFT JOIN eqi_equipment AS eqi
        ON dev.equipment_int=eqi.equipment_int
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and eqi.equipment_id like '%${equipmentId}%'
            </if>
            <if test="APPId !=null and APPId !=''">
                and dev.app_id like '%${APPId}%'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>

    <!--注册终端-->
    <insert id="registrationDevice" parameterType="com.zimax.mcrs.device.pojo.Device">
        insert into eqi_device
        values (#{deviceId}, MD5(#{APPId}), #{version}, #{needUpdate},
                #{deviceSoftwareType}, #{deviceName},#{equipmentInt},
                #{factoryName},
                #{remarks}, #{creator},
                #{createTime}, #{enable}, #{createRole},
                #{updater}, #{updateTime})
    </insert>

    <!--根据主键删除终端-->
    <delete id="logoutDevice" parameterType="int">
        delete
        from eqi_device
        where device_id = #{deviceId}
    </delete>

    <!--更新1条终端信息-->
    <update id="updateDevice" parameterType="com.zimax.mcrs.device.pojo.Device">
        update eqi_device
        set app_id = #{APPId},
            device_software_type=#{deviceSoftwareType},
            device_name=#{deviceName},
            factory_name=#{factoryName},
            equipment_int=#{equipmentInt},
            enable=#{enable},
            updater=#{updater},
            update_time=#{updateTime},
            remarks=#{remarks}
        where device_id = #{deviceId}
    </update>

    <!--查询数据给监控-->
    <select id="toMonitor" parameterType="map" resultType="com.zimax.mcrs.device.pojo.Device">
        select `equipment_id`,`app_id`,`device_software_type` ,`device_id`from eqi_device
    </select>

<!--    批量删除-->
    <delete id="deleteDevices" parameterType="java.util.List">
        delete from eqi_device where device_id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!--查询APPId-->
    <select id="checkAPPId" resultType="int">
        select count(*)
        from eqi_device
        where app_id = MD5(#{APPId})
    </select>



</mapper>
