<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.components.coframe.framework.mapper.FunctionMapper">
    <!--    查询记录数-->
    <select id="count" resultType="int">
        select count(*) from app_function
        <where>
            <if test="funcGroupId !=null and funcGroupId !=''">
                and func_group_id = '${funcGroupId}'
            </if>
        </where>
    </select>
    <!-- 查询所有的功能 -->
    <select id="queryAllFunctions" resultType="com.zimax.components.coframe.framework.pojo.Function">
        select * from app_function
    </select>
    <!--查询所有-->
    <select id="queryFunctions" parameterType="map" resultType="com.zimax.components.coframe.framework.pojo.Function">
        select * from app_function
        <where>
            <if test="funcGroupId !=null and funcGroupId !=''">
                and func_group_id = '${funcGroupId}'
            </if>
            <if test="funcCode !=null and funcCode !=''">
                and func_code = '${funcCode}'
            </if>
            <if test="funcName !=null and funcName !=''">
                and func_name = '${func_name}'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>

    <select id="queryFunctionsByGroupId"  resultType="com.zimax.components.coframe.framework.pojo.Function">
        select * from app_function where func_group_id in (select a.func_group_id from app_func_group as a where a.app_id=#{appId})
    </select>
    <!--    获取单个应用-->
    <select id="getFunction" resultType="com.zimax.components.coframe.framework.pojo.Function" >
        select * from app_function where func_code = #{funcCode}
    </select>
    <!--    新增应用-->
    <insert id="addFunction" parameterType="com.zimax.components.coframe.framework.pojo.Function">
        insert into app_function values(#{funcCode},#{funcName},#{funcDesc},#{funcAction},#{paraInfo},
          #{isCheck},#{funcType},#{displayOrder},#{isMenu},#{appInfo},#{tenantId},#{funcGroupId})
    </insert>

    <!--    更新1条应用信息-->
    <update id="updateFunction" parameterType="com.zimax.components.coframe.framework.pojo.Function">
        update app_function set func_name=#{funcName},is_menu=#{isMenu},is_check=#{isCheck},func_type=#{funcType},
            display_order=#{displayOrder},func_action=#{funcAction},para_info=#{paraInfo},
            func_desc=#{funcDesc} where func_code=#{funcCode}
    </update>
    <!--    批量删除-->
    <delete id="deleteFunctions" parameterType="java.util.List">
        delete from app_function where func_code in
        <foreach collection="list" item="id"  separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getFunctionsByFuncGroupId"  resultType="com.zimax.components.coframe.framework.pojo.Function">
        select * from app_function where func_group_id = ${funcGroupId}
    </select>


</mapper>
