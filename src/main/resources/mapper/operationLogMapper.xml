<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.mcrs.log.mapper.OperationLogMapper">

    <!--查询所有操作日志-->
    <select id="queryAll" parameterType="map" resultType="com.zimax.mcrs.log.pojo.OperationLogVo">
        select * from log_operation_log
        <where>
            <if test="logStatus !=null and logStatus !=''">
                and log_status like '%${logStatus}%'
            </if>
            <if test="operationType !=null and operationType !=''">
                and operation_type like '%${operationType}%'
            </if>
            <if test="operationTime !=null and operationTime !=''">
                and operation_time like '%${operationTime}%'
            </if>
            <if test="operationResult !=null and operationResult !=''">
                and operation_result like '%${operationResult}%'
            </if>
            <if test="operator !=null and operator !=''">
                and operator like '%${operator}%'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>


    <!--查询记录数-->
    <select id="count" resultType="int">
        select count(*) from log_operation_log
        <where>
            <if test="logStatus !=null and logStatus !=''">
                and log_status like '%${logStatus}%'
            </if>
        </where>
    </select>


    <!--添加操作日志-->
    <insert id="addOperationLog" parameterType="com.zimax.mcrs.log.pojo.OperationLog">
        insert into log_operation_log
        values (#{operationLogId}, #{operationLogNum}, #{logType}, #{logStatus},
                #{operationType}, #{operationContent}, #{operationResult},
                #{operator}, #{operationTime})
    </insert>

