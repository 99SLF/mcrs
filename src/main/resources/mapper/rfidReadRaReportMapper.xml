<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.mcrs.report.mapper.RFIDReadRaReportMapper">

    <!--添加RFID读取率报表-->
    <insert id="addRFIDReadRa" parameterType="com.zimax.mcrs.report.pojo.RFIDReadRa">
        insert into rep_rfid
        values (#{id},#{epcId}, #{readNum}, #{reader}, #{antenna}, #{dBm},#{rssi},#{updatedTime})
    </insert>

    <!--    查询记录数-->
    <select id="count" resultType="int">
        select count(*) from rep_rfid
        <where>
            <if test="epcId !=null and epcId !=''">
                and epcId like '%${epcId}%'
            </if>
            <if test="readNum !=null and readNum !=''">
                and readNum like '%${readNum}%'
            </if>
            <if test="reader !=null and reader !=''">
                and reader like '%${reader}%'
            </if>
            <if test="antenna !=null and antenna !=''">
                and antenna like '%${antenna}%'
            </if>
            <if test="dBm !=null and dBm !=''">
                and dBm like '%${dBm}%'
            </if>
            <if test="rssi !=null and rssi !=''">
                and rssi like '%${rssi}%'
            </if>
            <if test="startTime !=null and startTime!=''">
                and updatedTime &gt;= #{startTime}
            </if>
            <if test="endTime !=null and endTime !=''">
                and updatedTime &lt;= #{endTime}
            </if>
        </where>
    </select>

    <!--查询所有报表信息-->
    <!--列表显示-->
    <select id="queryRFIDs" parameterType="map" resultType="com.zimax.mcrs.report.pojo.RFIDReadRa">
        select * from rep_rfid
        <where>
            <if test="epcId !=null and epcId !=''">
                and epcId like '%${epcId}%'
            </if>
            <if test="readNum !=null and readNum !=''">
                and readNum like '%${readNum}%'
            </if>
            <if test="reader !=null and reader !=''">
                and reader like '%${reader}%'
            </if>
            <if test="antenna !=null and antenna !=''">
                and antenna like '%${antenna}%'
            </if>
            <if test="dBm !=null and dBm !=''">
                and dBm like '%${dBm}%'
            </if>
            <if test="rssi !=null and rssi !=''">
                and rssi like '%${rssi}%'
            </if>
            <if test="startTime !=null and startTime!=''">
                and updatedTime &gt;= #{startTime}
            </if>
            <if test="endTime !=null and endTime !=''">
                and updatedTime &lt;= #{endTime}
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>


</mapper>