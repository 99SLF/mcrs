    <!--依据设备资源号获取设备信息-->
    <select id="checkEquipment" resultType="int">
        select count(*)
        from eqi_equipment
        where equipment_int = #{equipmentInt}
    </select>


    <!--删除-->
    <delete id="removeInterfaceLog" parameterType="int">
        delete from log_interface_log where interface_log_id = #{interfaceLogId}
    </delete>


</mapper>
