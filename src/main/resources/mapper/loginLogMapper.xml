<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.mcrs.log.mapper.LoginLogMapper">

    <!--    查询记录数-->
    <select id="count" resultType="int">
        SELECT count(*) FROM log_login_log AS log
        LEFT JOIN eqi_equipment AS eqi
        ON log.equipment_int = eqi.equipment_int
        LEFT JOIN eqi_device AS dev
        ON log.device_id = dev.device_id
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and eqi.equipment_id like '%${equipmentId}%'
            </if>
            <if test="source !=null and source !=''">
                and log.source like '%${source}%'
            </if>
            <if test="loginUser !=null and loginUser !=''">
                and log.login_user like '%${loginUser}%'
            </if>
            <if test="loginTime !=null and loginTime !=''">
                and log.login_time like '%${loginTime}%'
            </if>
        </where>
    </select>

    <!--查询所有-->
    <select id="queryAll" parameterType="map" resultType="com.zimax.mcrs.log.pojo.LoginLogVo">
        SELECT * FROM log_login_log AS log
        LEFT JOIN eqi_equipment AS eqi
        ON log.equipment_int = eqi.equipment_int
        LEFT JOIN eqi_device AS dev
        ON log.device_id = dev.device_id
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and eqi.equipment_id like '%${equipmentId}%'
            </if>
            <if test="source !=null and source !=''">
                and log.source like '%${source}%'
            </if>
            <if test="loginUser !=null and loginUser !=''">
                and log.login_user like '%${loginUser}%'
            </if>
            <if test="loginTime !=null and loginTime !=''">
                and log.login_time like '%${loginTime}%'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>

    <!--添加登录日志-->
    <insert id="addLoginLog" parameterType="com.zimax.mcrs.log.pojo.LoginLog">
        insert into log_login_log
        values (#{loginLogId}, #{equipmentInt}, #{deviceId}, #{source},
                #{loginUser}, #{loginTime}, #{remarks})
    </insert>

    <!--删除-->
    <delete id="removeLoginLog" parameterType="int">
        delete from log_login_log where login_log_id = #{loginLogId}
    </delete>


</mapper>
