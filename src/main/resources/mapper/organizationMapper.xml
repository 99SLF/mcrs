<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.components.coframe.org.mapper.OrganizationMapper">
    <!--    查询记录数-->
    <select id="count" resultType="int">
        select count(*) from org_organization
        <where>
            <if test="parentOrgId !=null and parentOrgId !=''">
                and parent_org_id = #{parentOrgId}
            </if>
            <if test="orgCode !=null and orgCode !=''">
                and org_code = '${orgCode}'
            </if>
            <if test="orgType !=null and orgType !=''">
                and org_type = '${orgType}'
            </if>
        </where>
    </select>
    <!--查询所有-->
    <select id="queryOrg" parameterType="map" resultType="com.zimax.components.coframe.org.pojo.Organization">
        select * from org_organization
        <where>
            <if test="parentOrgId !=null and parentOrgId !=''">
                and parent_org_id = '${parentOrgId}'
            </if>
            <if test="orgCode !=null and orgCode !=''">
                and org_code = '${orgCode}'
            </if>
            <if test="orgType !=null and orgType !=''">
                and org_type = '${orgType}'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>

    <select id="querySubOrgs"  resultType="com.zimax.components.coframe.org.pojo.Organization">
        select * from org_organization
        <where>
            <if test="parentOrgId !=null and parentOrgId !=''">
                and parent_org_id = '${parentOrgId}'
            </if>
            <if test="parentOrgId ==null or parentOrgId ==''">
                and parent_org_id is NULl
            </if>
        </where>
            order by sortNo asc
    </select>
    <select id="queryPositionsOfOrg"  resultType="com.zimax.components.coframe.org.pojo.Position">
        select * from org_position
        <where>
            <if test="orgId !=null and orgId !=''">
                and org_id = '${orgId}'
            </if>
        </where>
        and mana_posi is NULl
    </select>
    <select id="queryEmployeesOfOrgNotInPosition"  resultType="com.zimax.components.coframe.org.pojo.Employee">
        SELECT E.* FROM ORG_EMPLOYEE E,ORG_EMP_ORG O WHERE E.EMP_ID = O.EMP_ID AND O.ORG_ID ='${orgId}'
            AND E.EMP_ID NOT IN
            (SELECT EMP_ID FROM ORG_EMP_POSITION EP,ORG_POSITION P
            WHERE EP.POSITION_ID=P.POSITION_ID AND P.ORG_ID='${orgId}')   ORDER BY E.SORT_NO
    </select>
</mapper>
