<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimax.mcrs.monitor.mapper.AccessMonitorMapper">
    <!--添加监控信息-->
    <insert id="addAccessMonitor" parameterType="com.zimax.mcrs.monitor.pojo.AccessStatus">
        insert into mon_access_status
        values ( #{accessId}, #{equipmentId}, #{APPId}, #{accessType}, #{accessStatus},
                 #{antennaStatus}, #{deviceSoType}, #{deviceSoRuntime}, #{cpuRate}, #{storageRate},#{occurTime}, #{errorRate}, #{warningTitle}, #{warningType}, #{warningLevel}, #{warningContent}, #{remarks})
    </insert>
    <!--    查询记录数-->
    <select id="countSO" resultType="int">
        select count(*) from mon_access_status
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and equipment_id like '%${equipmentId}%'
            </if>
            <if test="APPId !=null and APPId !=''">
                and APP_id like '%${APPId}%'
            </if>
            <if test="deviceSoType !=null and deviceSoType !=''">
                and device_so_type like '%${deviceSoType}%'
            </if>
            <if test="deviceSoRuntime !=null and deviceSoRuntime !=''">
                and device_so_runtime like '%${deviceSoRuntime}%'
            </if>
        </where>
    </select>

    <!--查询软件运行状态信息-->
    <select id="querySoRuntimes" parameterType="map" resultType="com.zimax.mcrs.monitor.pojo.AccessStatus">
        select * from mon_access_status
        <where>
            <if test="equipmentId !=null and equipmentId !=''">
                and equipment_id like '%${equipmentId}%'
            </if>
            <if test="APPId !=null and APPId !=''">
                and APP_id like '%${APPId}%'
            </if>
            <if test="deviceSoType !=null and deviceSoType !=''">
                and device_so_type like '%${deviceSoType}%'
            </if>
            <if test="deviceSoRuntime !=null and deviceSoRuntime !=''">
                and device_so_runtime like '%${deviceSoRuntime}%'
            </if>
        </where>
        <if test="order !=null and order !=''">
            order by ${field} ${order}
        </if>
        <if test="limit !=null and limit !=''">
            limit ${begin},${limit}
        </if>
    </select>

    <!--    plc查询记录数-->
